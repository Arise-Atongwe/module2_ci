
pipeline{
	agent any 
	tools {maven 'maven'}
		stages{
			stage('git-clone') {
				steps{
					checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'git-Jenkins', url: 'https://github.com/Arise-Atongwe/module2_ci.git']]])				}
			}
			stage('Hello-Etech'){
				steps{
				sh 'git version'
				}
			}
			stage('codebuild'){
				steps{
				sh 'mvn clean package -DskipTests=true'
				}
			}
			stage('Unit Tests - JUnit and JaCoCo'){
				steps{
					sh 'mvn test'
				}
				post{
					always{
						junit'target/surefire-reports/*.xml'
						jacoco execPattern: 'target/jacoco.exec'
					}
				}
			}
			stage('Mutation Test - PIT'){
				steps{
					sh 'mvn org.pitest:pitest-maven:mutationCoverage'
				}
				post{
					always{
						pitmutation mutationStatsFile:'**/target/pit-reports/**/mutations.xml'
					}
				}
			}
		} 
}
